/* 语音消息样式 */
.voice-content.data-v-1cf27b2a {
  display: flex;
  align-items: center;
  padding: 5px 0;
}
.voice-wave.data-v-1cf27b2a {
  display: flex;
  align-items: center;
  gap: 3px;
  margin-right: 10px;
}
.voice-wave.playing .wave-bar.data-v-1cf27b2a {
  animation: wave-1cf27b2a 1s infinite ease-in-out;
}
.wave-bar.data-v-1cf27b2a {
  width: 3px;
  height: 20px;
  background: currentColor;
  border-radius: 3px;
}
.wave-bar.data-v-1cf27b2a:nth-child(2) {
  height: 30px;
  animation-delay: 0.2s;
}
.wave-bar.data-v-1cf27b2a:nth-child(3) {
  height: 15px;
  animation-delay: 0.4s;
}
@keyframes wave-1cf27b2a {
0%, 100% { transform: scaleY(0.5);
}
50% { transform: scaleY(1);
}
}
.voice-duration.data-v-1cf27b2a {
  font-size: 14px;
  opacity: 0.8;
}

/* 加载动画 */
.loading-indicator.data-v-1cf27b2a {
  display: flex;
  justify-content: center;
  padding: 10px 0;
}
.loading-dot.data-v-1cf27b2a {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #999;
  margin: 0 4px;
  animation: bounce-1cf27b2a 1.4s infinite;
}
.loading-dot.data-v-1cf27b2a:nth-child(2) { animation-delay: 0.2s;
}
.loading-dot.data-v-1cf27b2a:nth-child(3) { animation-delay: 0.4s;
}
@keyframes bounce-1cf27b2a {
0%, 80%, 100% { transform: scale(0);
}
40% { transform: scale(1);
}
}

